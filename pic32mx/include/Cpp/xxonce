// xxonce internal header
// NOTE: no include guard

template <class _Fn _C_CLASS_FARG0> inline
	void call_once(once_flag& _Flag, _Fn _Fx _C_FARG0_F0_REF)
	{	// call _Fx(_F0_F1) once
	_Call_it(_Flag, tr1::bind(_Fx _C_F0_F1));
	}

